<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TruckerWorld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="LocalSearchViewStyle" parent="android:Theme.Holo">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/shuttle_grey</item>  <!-- shuttle iron-->
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:colorAccent">@color/shuttle_grey</item> <!-- iron-->
    </style>

    <style name="DialogStyleConcrete" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>