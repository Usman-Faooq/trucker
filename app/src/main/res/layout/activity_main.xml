<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dark_green_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_20sdp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:src="@drawable/main_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health &amp; physical fitness is very important in our industry, we spend so much time sitting behind the wheel. As the saying goes &quot;when you sit around, you get round&quot;. You don&apos;t want to get round, you want to have a healthy physical shape.\n\nSo join Trucker World; a small world within a big world, for a healthy physical daily workout routine.\n\nDo it for yourself, do it for your loved ones, and share it with your friends. You&apos;re worth it!"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/white"
            android:gravity="center"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>